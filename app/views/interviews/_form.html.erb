<%= form_for([@application, @interview]) do |f| %>
<% if @interview.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @interview.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
       </ul>
       </div>
       <% end %> 
  <div class="form-group">
    <%= f.label :date_interviewed %><br>
    <%= f.date_field :date_interviewed, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :interview_time %><br>
    <%= f.time_field :interview_time, class: "form-control" %>
  </div>  
  <div class="form-group">
    <div class="radio-inline">
      <%= f.radio_button :kind, 'Phone' %><b>Phone</b>
    </div>
    <div class="radio-inline">
      <%= f.radio_button :kind, 'In Person' %><b>In Person</b>
    </div>
    <div class="radio-inline">
      <%= f.radio_button :kind, 'Video Chat' %><b>Video</b>
    </div>
  </div> 
  <div class="form-group">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, class: "form-control" %>
  </div> 
<div class="col-lg-12">      
  <div class="actions">
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>    
  </div> 
<% end %>