<h2>Interviews</h2>
<div id="interviews" class="col-lg-12">
<h2 id="month"class="col-lg-12">
  <span class="col-lg-1">
  <%= link_to "<", date: @date.prev_week %>
</span>
<span class="col-lg-10">
  <% date_range = @date.beginning_of_week..@date.end_of_week %>
  <%= date_range.to_s(:condensed) %>
</span>
<span class="col-lg-1">
  <%= link_to ">", date: @date.next_week %>
</span>
</h2>
<div class="table-responsive">
<%= calendar @date do |date| %>
  <%= date.day %>
  <% if @interviews_by_date[date] %>
    <ul>
      <% @interviews_by_date[date].sort_by! {|i| i.interview_time }.each do |interview| %>
        <li><%= interview.interview_time %>: <%= link_to interview.application.company, interview %> (<%= interview.kind %>)</li>
      <% end %>
    </ul>  
  <% end %>
<% end %>
</div>
</div>