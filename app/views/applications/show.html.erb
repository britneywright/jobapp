<h2><%= @application.position %></h2>
<div class="col-lg-8">
  <h3><%= @application.company %> | Applied: <%= @application.date_applied %></h3>
  <% if @application.description? %>
  <h4>Description</h4>
  <p><%= simple_format @application.description %></p>
  <% end %>
  <% if @application.notes? %>
  <h4>Notes</h4>
  <p><%= simple_format @application.notes %></p>
  <% end %>
  <% if @application.link? %>
  <h4>Website</h4>
  <p><%= link_to @application.link, @application.link %></p>
  <% end %>
  <% if @application.interviews.count == 0 %>
  <% else %>
  <h4>Interviews</h4>
  <ul>
	  <% @application.interviews.each do |interview| %>
	  <li><%= link_to "#{interview.kind}: ", interview_path(interview) %> <%= interview.date_interviewed %></li>
	  <% end %>
  </ul>
  <% end %>
</div>
<% if @application.contact_name? || @application.contact_email? || @application.contact_phone? || @application.contact_address? %>
<aside class="col-lg-4"> 
  <h3>Contact</h3>
  <% if @application.contact_name? %>
  <p><%= @application.contact_name %></p>
  <% end %>
  <% if @application.contact_email? %>
  <h4>Email</h4>
  <p><%= @application.contact_email %></p>
  <% end %>
  <% if @application.contact_phone? %>
  <h4>Phone Number</h4>
  <p><%= simple_format @application.contact_phone %></p>
  <% end %>
  <% if @application.contact_address? %>  
  <h4>Address</h4>
  <p><%= simple_format @application.contact_address %></p>
  <% end %>
</aside>
<% end %>
<div class="col-lg-12">
<small><%= link_to "View All Applications", user_applications_path(@application.user_id) %> | 
<%= link_to "Add a new interview", new_application_interview_path(@application) %>
<br>
<small><%= link_to 'Edit', edit_application_path %> | 
<%= link_to 'Destroy', application_path, method: :delete, data: { confirm: 'Are you sure?' } %></small>
</div>